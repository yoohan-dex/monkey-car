/* pages/person/person.wxss */
.container-wrap {
    background: #D1754D;
}

.list-container {
    margin-top: 20rpx;
    padding: 30rpx 20rpx;
}

.list-box {
    margin: 5rpx 0;
    animation: comeIn 0.3s;
}

@keyframes comeIn {
    from {
        opacity: 0;
        transform: translate(150%);
    }
    to {
        opacity: 1;
        transform: translate(0);
    }
}

.list-box button {
    /*display: flex;
    justify-content: space-between;
    border-radius: 0;
    color: #666;
    background: #EDEDED;*/
    background: #FDFDFD;
    font-size: 35rpx;
    width: 100%;
    border-radius: 10rpx;
    margin-bottom: 10rpx;
    color: #95989A;
    box-shadow: 1rpx 2rpx 10rpx 0 rgba(0, 0, 0, 0.4);
  /*box-shadow: 1rpx 4rpx 20rpx 0 rgba(0, 0, 0, 0.4);*/
}
.list-box button::after {
    border: 0;
}

.item-press {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
  box-shadow: 0rpx 0rpx 20rpx 0 rgba(0, 0, 0, 0.4);
  color: #D1754D;
}