.route {
  line-height: 50rpx;
  width: 80%;
  color: #fff;
  font-size: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 10%;
}

.route picker {
  width: 100%;
  align-items: center;
  padding: 15rpx 0;
}

.route-input {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 2px;
  border-color: white;
  border-bottom-color: white;
  border-bottom-style: solid;
  font-size: 30rpx;
}

.location-picker {
  display: flex;
  flex-direction: row;
  
}

.location-icon {
  margin-left: 20rpx;
}

.route-label {
  display: inline-block;
}
.container-action > view {
  height: 100%;
}
.route-action {
  height: 100%;
  text-align: center;
  color: #D1754D;
}
.price-predict {
  padding-top: 70rpx;
}

.price-predict view {
  padding: 0 0 30rpx;
}

.prediction {
  font-size: 40rpx;
}

.route-tips {
  padding-top: 70rpx;
}
.route-tips view {
  font-size: 40rpx;
  line-height: 1.6;
}

.time {
  padding-top: 50rpx;
  color: #FDFDFD;
}
.time-title {
  line-height: 50rpx;
  color: #FFF;
  font-size: 35rpx;
}

.time-label {
  border-bottom: 1px solid white;  
}

.time-help {
  text-align: right;
  font-size: 28rpx;
}

.time-selector {
  padding: 50rpx 0 50rpx;
  display: flex;
  justify-content: space-between;
  font-size: 36rpx;
  flex-direction: row;
}
.time-right, .time-left{
  display: flex;
  flex-direction: row;
}

.time-right view {
  height: 45rpx;
}

.seat-selector {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.seat-book, .seat-scale {
  font-size: 36rpx;
  display: flex;
  flex-direction: row;
  width: 50%;
}
.seat-book view,
.seat-scale view {
  height: 45rpx;
}
.seat-scale {
  justify-content: flex-end;
}

.selector-text {
  padding: 10rpx 0;
}

.selector-inline-text {
  color: #ddd;
  padding: 10rpx 5rpx;
}

.selector-line {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 25rpx;
  border-bottom: 2px;
  border-color: white;
  border-bottom-color: white;
  border-bottom-style: solid;
  box-shadow: 0 2rpx 10 0 rgba(0,0,0,0.3);
  line-height: 1.1;
}

.coupons {
  color: #D1754D;
  text-align: center;
  font-size: 40rpx;
  line-height: 1.3;
}
.coupons-without {
  color: #888;
  font-size: 40rpx;
  line-height: 1.3;
}

.phone-form {
  text-align: left;
}

.phone-form input {
  border-bottom: 2px #D1754D solid;
  padding: 2rpx 20rpx;
  margin: 0 30rpx 50rpx;
}

.phone-form text {
  font-size: 30rpx;
  color: #888;
}

.phone-form .button-group {
  display: flex;
  justify-content: space-between;
}
.phone-form .button-group button {
  margin: 0 30rpx;
}
.phone-form .button-group button:nth-child(1) {
  border-color: #D1754D;
  color: #D1754D;
}
.phone-form .button-group button:nth-child(2) {
  background: #D1754D;
}

